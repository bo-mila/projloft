.menu__items {
  display: flex;
  justify-content: space-between;
  @include tablets {
    flex-wrap: wrap;
    justify-content: flex-start;
    line-height: 1;
  }
}

.menu__item {
  color: currentColor;
  border-bottom: 1px solid transparent;
  opacity: .7;
  transition: .6s;
  flex-grow: 1;
  text-align: center;
   @include tablets {
    flex-grow: 0;
    text-align: left;
    margin-right: 13%;
   }
  &:last-child {
    margin-right: 0;
  }
  &:hover {
    opacity: 1;
    color: $main-color;
    border-color: $main-color;
  }
}

.menu__link {
  text-decoration: none;
  color: currentColor;
  line-height: 5;
  @include tablets {
    line-height: 3;
    
  }
}
