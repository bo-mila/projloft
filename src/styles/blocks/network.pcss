.network {
  min-width: 500px;
  padding-top: 11%;
  padding-bottom: 9%;
  color: white;
  @include fulldesctop {
    padding-top: 17%;
    padding-bottom: 15%;

  }
  @include tablets {
    padding-top: 11%;
    padding-bottom: 17%;

  }
}

.network__content {
  display: flex;
  flex-direction: column;
  width: 65%;
  @include fulldesctop {
    width: 88%;
  }
  @include tablets {
    width: 100%;
  }
}

.network__container {
  @include fulldesctop {
    width: 90%;
  }
}

.network__title {
  font-size: 36px;
  font-weight: bold;
  line-height: 1.33;
  color: currentColor;
  margin-bottom: 8%;
  @include tablets {
    margin: 0 auto;
    margin-bottom: 6%;
  }
}
