.menu__items {
  display: flex;
  justify-content: space-between;
}

.menu__item {
  color: currentColor;
  border-bottom: 1px solid transparent;
  opacity: .7;
  transition: .6s;
  flex-grow: 1;
  text-align: center;

  &:last-child {
    margin-right: 0;
  }
  &:hover {
    opacity: 1;
    color: $main-color;
    border-color: $main-color;
  }
}

.menu__link {
  text-decoration: none;
  color: currentColor;
  line-height: 5;
  
}
