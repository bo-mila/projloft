.socials {
  display: flex;
}

.socials__item {
  margin-right: 20px;

  &:last-child {
    margin-right: 0;
  }
}

.socials__link {
  color: currentColor;
  display: flex;
  align-items: center;
  &--footer {
    padding: 10px;
    border: 1px solid currentColor;
    border-radius: 50%;
  }
}

.socials__icon {
  width: 20px;
  height: 20px;
  fill: currentColor;
  
}

