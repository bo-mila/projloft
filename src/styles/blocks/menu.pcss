.menu__items {
  display: flex;
}

.menu__item {
  margin-right: 50px;
  color: currentColor;
  border-bottom: 1px solid transparent;
  opacity: .7;
  transition: .6s;

  &:last-child {
    margin-right: 0;
  }
  &:hover {
    opacity: 1;
  }
  &--active {
    color: $main-color;
    border-color: $main-color;
    opacity: 1;
  }
}

.menu__link {
  text-decoration: none;
  color: currentColor;
  line-height: 5;
  &--footer {
    
  }
}
