.user-boss {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: currentColor;
}

.user-boss__avatar {
  margin-bottom: 15%;
}

.avatar {
  width: 200px;
  height: 200px;
  overflow: hidden;
  border-radius: 50%;
}

.avatar__pic {
  width: 100%;
  height: 100%;
  object-fit: cover;
}


.user__text-td {
  padding-right: 30%;
  opacity: .15;
  height: 40px;
  &:last-child {
    padding-right: 0;
    opacity: .8;
  }
}

