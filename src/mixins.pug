mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, altdesc, className)
  img(src=require(`images/${path}`) alt=altdesc class=className)

mixin socials(array, mode)
  ul.socials
    each item in array
      li(class="socials__item socials__item--"+mode)
        a(class='socials__link socials__link--'+mode href="`${item[1]}`" target="blank")
          +icon(`${item[0]}`, "socials__icon socials__icon--"+mode)

mixin nav(array, mode)
  nav.menu
    ul(class="menu__items menu__items--"+mode)
      each item in array
        li(class="menu__item menu__item--"+mode)
          a(class='menu__link menu__link--'+mode href=`${item[1]}`) #{item[0]}